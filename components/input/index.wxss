/* components/input/index.wxss */

.inputContainer {
  position: relative;
  border: 1px solid #ccc;
  padding: 0 10rpx;
  display: flex;
}

.outinput {
  flex-direction: row;
  align-items: center;
}
.outtextarea{
  flex-direction: column;
  height: 160rpx;
}

.input {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  flex: 1;
}
.textarea{
  width: 100%;
  font-size: 24rpx;
  flex: 1;
}

.length {
  font-size: 24rpx;
  margin-left: 10rpx;
}
.length.right{
  text-align: right;
  margin-bottom: 10rpx;
}