.button {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.aon {
  position: absolute;
  white-space: nowrap;
  animation-timing-function: linear;
  animation-fill-mode: none;
  flex-direction: row;
  z-index: 99;
  display: inline-flex;
  vertical-align: middle;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 15rpx 0 5rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 25rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #fff;
}
.viewMove{
  width: 100%;
  position: fixed;
  
  height: 40%;
  overflow: hidden;
  margin: 20rpx;
}
