@keyframes first {
  from {
    left: 100%;
  }

  to {
    left: -100%;
  }
}


.avatarBox {
  display: inline-block;
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.avatarBox .avatar {
  width: 40rpx;
  height: 40rpx;
  border: 0;
  border-radius: 50%;
  overflow: hidden;
}

.sex {
  position: absolute;
  left: 25rpx;
  top: 18rpx;
  width: 22rpx;
  height: 22rpx;
  overflow: hidden;
}

.content {
  display: inline-block;
  max-width: 440rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 10rpx;
}
